{
  "git": {
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "autoGenerate": true
  },
  "plugins": {
    "@j-ulrich/release-it-regex-bumper": {
      "out": {
        "file": "**/version.rb",
        "search": "VERSION\\s*=\\s*\"([0-9.]+)\"",
        "replace": "VERSION = \"{{version}}\""
      }
    },
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": false
    }
  }
}
